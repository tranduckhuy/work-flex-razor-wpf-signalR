@page
@model WorkFlex.Web.Pages.TestUserList.IndexModel
@{
    ViewData["Title"] = "TestUserList";
}

<h2>TestUserList</h2>

<div>
    @foreach (var user in Model.Users)
    {
        <div>
            <img src="@user.Avatar" alt="@user.Username" style="width: 50px; height: 50px; border-radius: 50%;" />
            <a asp-page="/TestChat/Index" asp-route-otherUserId="@user.UserId" style="font-weight:600; color:black;">@user.Username</a>
        </div>
    })
</div>
