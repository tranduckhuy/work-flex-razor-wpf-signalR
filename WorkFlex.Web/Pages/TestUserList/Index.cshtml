@page
@model WorkFlex.Web.Pages.TestUserList.IndexModel
@{
    ViewData["Title"] = "TestUserList";
}

<div class="container mt-4" style="min-height: 600px">
    <h2 class="text-center mb-4">Test User List</h2>

    @if (Model.Users != null && Model.Users.Count > 0)
    {
        <div class="list-group">
            @foreach (var user in Model.Users)
            {
                <a class="list-group-item list-group-item-action d-flex align-items-center border-0 rounded shadow-sm mb-2"
                   asp-page="/Chat/Index" asp-route-otherUserId="@user.Id"
                   style="background-color: #f1f3f5; color: #343a40;">
                    <img src="@user.Avatar" alt="@user.Name" class="rounded-circle" style="width: 50px; height: 50px; margin-right: 15px;" />
                    <div class="flex-grow-1">
                        <h6 class="mb-1 font-weight-bold">@user.Name</h6>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-center">There are no users yet.</p>
    }
</div>

<style>
    .list-group-item {
        transition: background-color 0.3s, transform 0.3s;
        border-radius: 8px;
    }

        .list-group-item:hover {
            background-color: #e2e6ea;
            transform: scale(1.02);
        }

    .badge {
        font-size: 0.8rem;
    }
</style>
