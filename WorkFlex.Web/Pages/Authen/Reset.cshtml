@page "{resetToken?}"
@model WorkFlex.Web.Pages.Authen.ResetModel
@{
    Layout = "_LayoutAuthen";
    ViewData["Title"] = "Reset Password";
    var failedMessage = TempData["FailedMessage"] as string;
}

<div class="container padding-bottom-3x mb-2 mt-5" style="padding-bottom:35px;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="reset">
                <a href="~/"
                   style="text-decoration: none; color: #555;">
                    <i class="d-flex fa fa-arrow-left" aria-hidden="true"></i>
                </a>
                <br>
                <h2>Reset Password</h2>
                @if (!string.IsNullOrEmpty(failedMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @failedMessage
                    </div>
                }
                <p>Change your password in three easy steps. This will help you to secure your password!</p>
                <ol class="list-unstyled">
                    <li><span class="text-dark text-medium">1. </span>Your new password needs at most 16 characters.</li>
                    <li><span class="text-dark text-medium">2. </span>Your new password needs at least 1 number & 1 special character.</li>
                    <li><span class="text-dark text-medium">3. </span>Your new password needs a character lower & upper.</li>
                </ol>
            </div>
            <br>
            <form class="card mt-2" method="post" id="reset-form">
                <div class="card-body">
                    <div class="input-box">
                        <div class="form-group">
                            <input class="form-control" type="password" name="newPassword" id="new-password" rules="required|min:8|max:16|number|lower|upper|special" required>
                            <small class="form-text text-muted">
                                Enter the password new.
                            </small>
                            <span class="form-message"></span>
                        </div>
                    </div>
                    <div class="input-box">
                        <div class="form-group">
                            <input class="form-control" type="password" name="confirmPassword" id="confirm-password" rules="required|min:8|max:16|number|lower|upper|special" required>
                            <small class="form-text text-muted">
                                Enter the re-password new.
                            </small>
                            <span class="form-message"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-submit" type="submit"
                            style="background-color: #6dabe4; border-color: #6dabe4; color: #fff;">
                        Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        Validator("#reset-form");
    </script>
}