@page
@model WorkFlex.Web.Pages.Job.JobApplyModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Job Apply";
    var successMsg = TempData["SuccessMessage"] as string;
    var failedMsg = TempData["FailedMessage"] as string;
}

<style>
    .container-outer {
        background-image: url(/img/hero/h1_hero.jpg);
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
        margin-top: -100px;
    }

    .apply-container {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 700px;
        text-align: center;
    }

        .apply-container h1 {
            font-size: 32px;
            margin-bottom: 15px;
            color: #333;
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .apply-container p {
            margin-bottom: 20px;
            font-size: 16px;
            color: #666;
        }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            text-align: left;
            color: #333;
        }

        .form-group textarea {
            width: 100%;
            height: 150px;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            resize: none;
            transition: border-color 0.3s;
        }

            .form-group textarea:focus {
                border-color: #666;
                outline: none;
            }

        .form-group small {
            display: block;
            margin-top: 5px;
            color: #999;
        }

    .upload-box {
        border: 2px dashed #ccc;
        padding: 25px;
        text-align: center;
        border-radius: 6px;
        background-color: #f9f9f9;
        position: relative;
        transition: background-color 0.3s;
    }

        .upload-box:hover {
            background-color: #eaeaea;
        }

        .upload-box i {
            font-size: 28px;
            color: #666;
            margin-bottom: 10px;
        }

        .upload-box p {
            margin: 5px 0;
            color: #666;
        }

    .upload-input {
        display: none;
    }

    .file-name {
        font-weight: bold;
        color: #000;
        margin-top: 10px;
    }

    .apply-btn {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .apply-btn:hover {
            background-color: #45a049;
        }

    .progress-container {
        width: 100%;
        background-color: #e0e0e0;
        border-radius: 6px;
        overflow: hidden;
        margin-top: 15px;
    }

    .progress-bar {
        width: 0;
        height: 8px;
        background-color: #4CAF50;
        transition: width 0.4s ease;
    }

</style>


<div id="toast"></div>
@if (!string.IsNullOrEmpty(successMsg))
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                toast({
                    title: "Success",
                    message: "@successMsg",
                    type: "success",
                    duration: 3000,
                });
            }, 600);
        });
    </script>
}
else if (!string.IsNullOrEmpty(failedMsg))
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                toast({
                    title: "Failed",
                    message: "@failedMsg",
                    type: "danger",
                    duration: 3000,
                });
            }, 600);
        });
    </script>
}

<div class="container-outer">
    <form method="post" class="apply-container">
        <h1>@Model.JobPost.Title</h1>
        <p>Please Fill Out the Form Below to Submit Your Job Application!</p>
        <div class="form-group">
            <label for="cover-letter">Cover Letter</label>
            <textarea asp-for="JobApplyVM.Description" id="cover-letter" placeholder="Write your cover letter here..."></textarea>
            <small>Please do not exceed 200 words.</small>
        </div>
        <div class="form-group">
            <label for="resume">Upload CV <span style="color: red;">*</span></label>
            <div class="upload-box" onclick="document.getElementById('file-upload').click();">
                <i class="fas fa-cloud-upload-alt"></i>
                <p id="upload-message">Drag and drop files here</p>
                <input id="file-upload" class="upload-input" type="file" accept=".pdf, .doc, .docx" onchange="updateUploadMessage()">
                <input asp-for="JobApplyVM.CVUrl" type="hidden" id="file-url" />
                <input asp-for="JobApplyVM.JobPostId" value="@Model.JobPost.Id" type="hidden" />
                <p id="file-name" class="file-name" style="display: none;"></p>
            </div>
        </div>
        <div class="progress-container mb-2" style="display: none;">
            <div class="progress-bar"></div>
        </div>
        <button class="apply-btn" type="button" onclick="submitForm()">Apply</button>
    </form>
</div>

<script src="https://www.gstatic.com/firebasejs/4.2.0/firebase.js"
        integrity="sha384-jm31kDh5bQXHL1gr/Qdq4Z1bVU+ZnEjbqMrZGhsEopCPF4HuGU0B0eH3LHcAz+H7"
        crossorigin="anonymous">
</script>

<script src="/js/firebase/cvUpload.js"></script>