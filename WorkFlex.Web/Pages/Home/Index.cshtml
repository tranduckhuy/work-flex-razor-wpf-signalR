<script>
    document.addEventListener("DOMContentLoaded", function () {
        function showToast(message, type = "info") {
            if (typeof toast === "function") {
                toast({
                    title: type === "success" ? "Success" : "Error",
                    message: message,
                    type: type,
                    duration: 3000,
                });
            } else {
                console.error("Toast function is not available.");
            }
        }

        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        const paymentStatus = getQueryParam("PaymentStatus");
        const paymentMessage = getQueryParam("PaymentMessage") || "Payment status not provided.";

        if (paymentStatus) {
            if (paymentStatus === "00") {
                showToast("Payment successful!", "success");
            } else if (paymentStatus === "10") {
                showToast(paymentMessage || "Payment failed.", "danger");
            } else {
                showToast("Unknown payment status.", "warning");
            }

            const url = new URL(window.location.href);
            url.searchParams.delete("PaymentStatus");
            url.searchParams.delete("PaymentMessage");
            window.history.replaceState({}, document.title, url.pathname);
        }
    });
</script>