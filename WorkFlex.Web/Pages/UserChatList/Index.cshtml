@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model WorkFlex.Web.Pages.UserChatList.IndexModel
@{
    ViewData["Title"] = "List of users who have messaged";
}

<div class="container mt-4" style="min-height: 600px">
    <h2 class="text-center mb-4">Conversations</h2>

    @if (Model.UserChats != null && Model.UserChats.Count > 0)
    {
        <div class="list-group">
            @foreach (var otherUser in Model.UserChats)
            {
                <a class="list-group-item list-group-item-action d-flex align-items-center border-0 rounded shadow-sm mb-2"
                   asp-page="/TestChat/Index" asp-route-otherUserId="@otherUser.Id"
                   style="background-color: #f1f3f5; color: #343a40;">
                    <img src="@otherUser.Avatar" alt="@otherUser.Username" class="rounded-circle" style="width: 50px; height: 50px; margin-right: 15px;" />
                    <div class="flex-grow-1">
                        <h6 class="mb-1 font-weight-bold">@otherUser.Username</h6>
                        <small class="text-muted">Last message preview...</small>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-center">There are no conversations yet.</p>
    }
</div>

<style>
    .list-group-item {
        transition: background-color 0.3s, transform 0.3s;
        border-radius: 8px;
    }

        .list-group-item:hover {
            background-color: #e2e6ea;
            transform: scale(1.02);
        }

    .badge {
        font-size: 0.8rem;
    }
</style>


